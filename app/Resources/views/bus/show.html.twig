{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bus</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bus.id }}</td>
            </tr>
            <tr>
                <th>Depart</th>
                <td>{{ bus.depart }}</td>
            </tr>
            <tr>
                <th>Destination</th>
                <td>{{ bus.destination }}</td>
            </tr>
            <tr>
                <th>Nombre places</th>
                <td>{{ bus.nombrePlaces }}</td>
            </tr>
            <tr>
                <th>Conducteur</th>
                <td>{{ conducteur }}</td>
            </tr>
        </tbody>
    </table>

<div>

    {{ form_start(delete_form) }}
    <a href="{{ path('bus_index') }}" class="btn btn-warning">Retour</a>
    <a href="{{ path('bus_edit', { 'id': bus.id }) }}" class="btn btn-success">Modifier</a>
        <input type="submit" value="Supprimer" class="btn btn-danger">
        {{ form_end(delete_form) }}
</div>


{% endblock %}
