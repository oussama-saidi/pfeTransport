{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des Bus</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Depart</th>
                <th>Destination</th>
                <th>Nombre places</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bus in buses %}
            <tr>
                <td><a href="{{ path('bus_show', { 'id': bus.id }) }}">{{ bus.id }}</a></td>
                <td>{{ bus.depart }}</td>
                <td>{{ bus.destination }}</td>
                <td>{{ bus.nombrePlaces }}</td>
                <td>
                    <a href="{{ path('bus_show', { 'id': bus.id }) }}" class="btn btn-success">Afficher</a> |
                    <a href="{{ path('bus_edit', { 'id': bus.id }) }}" class="btn btn-warning">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div>
            <a href="{{ path('bus_new') }}" class="btn btn-primary">Ajouter</a>
    </div>
{% endblock %}
