{% extends 'base.html.twig' %}

{% block body %}
    <h1>Station</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ station.id }}</td>
            </tr>
            <tr>
                <th>Numarret</th>
                <td>{{ station.numArret }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ station.nom }}</td>
            </tr>
            <tr>
                <th>Klmstation</th>
                <td>{{ station.klmStation }}</td>
            </tr>
        </tbody>
    </table>

    <div>

        {{ form_start(delete_form) }}
        <a href="{{ path('station_index') }}" class="btn btn-warning">Retour</a>
        <a href="{{ path('station_edit', { 'id': station.id }) }}" class="btn btn-success">Modifier</a>
        <input type="submit" value="Supprimer" class="btn btn-danger">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
