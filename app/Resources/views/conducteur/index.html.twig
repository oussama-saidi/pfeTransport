{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des Conducteurs</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nummatricule</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Numeros tel</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for conducteur in conducteurs %}
            <tr>
                <td><a href="{{ path('conducteur_show', { 'id': conducteur.id }) }}">{{ conducteur.id }}</a></td>
                <td>{{ conducteur.numMatricule }}</td>
                <td>{{ conducteur.nom }}</td>
                <td>{{ conducteur.prenom }}</td>
                <td>{{ conducteur.numerosTel }}</td>
                <td>
                    <a href="{{ path('conducteur_show', { 'id': conducteur.id }) }}" class="btn btn-success">Afficher</a> |
                    <a href="{{ path('conducteur_edit', { 'id': conducteur.id }) }}" class="btn btn-warning">Modifier</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div>
        <a href="{{ path('conducteur_new') }}" class="btn btn-primary">Ajouter</a>
    </div>
{% endblock %}
