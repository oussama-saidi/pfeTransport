
    {% extends 'base.html.twig' %}

    {% block body %}
        <h1>Liste des utilisateur</h1>

        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Nom d'utilisateur</th>
                <th>Cin</th>
                <th>Login</th>
                <th>Rôle</th>
                <th>Actions</th>

            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                    <td>{{ user.nom }}</td>
                    <td>{{ user.prenom }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.cin }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles|join(', ') }}</td>
                    <td>
                        <a href="{{ path('user_show', { 'id': user.id }) }}" class="btn btn-success">Afficher</a> |
                        <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-warning">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div>
            <a href="{{ path('user_new') }}" class="btn btn-primary">Ajouter</a>
        </div>
    {% endblock %}
