{% extends 'base.html.twig' %}

{% block body %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.Id }}</td>

        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ user.nom }}</td>

        </tr>
        <tr>
            <th>Prénom</th>
            <td>{{ user.prenom }}</td>

        </tr>
        <tr><th>Nom</th>
            <td>{{ user.username }}</td>

        </tr>
        <tr><th>Prénom</th>
            <td>{{ user.usernameCanonical }}</td>

        </tr>
        <tr><th>Cin</th>
            <td>{{ user.cin }}</td>


        </tr>
        <tr><th>Login</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr><th>Rôle</th>
            <td>{{ user.roles|join(', ') }}</td>
        </tr>

        </tbody>
    </table>

    <div>

        {{ form_start(delete_form) }}
        <a href="{{ path('user_index') }}" class="btn btn-warning">Retour</a>
        <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-success">Modifier</a>
        <input type="submit" value="Supprimer" class="btn btn-danger">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
