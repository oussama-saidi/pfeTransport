{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ma Carte</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carte.id }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ carte.numero }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ carte.montant }}</td>
            </tr>
        </tbody>
    </table>

    <div>

        {{ form_start(delete_form) }}
        <a href="{{ path('carte_index') }}" class="btn btn-warning">Retour</a>
        <a href="{{ path('carte_edit', { 'id': carte.id }) }}" class="btn btn-success">Modifier</a>
        <input type="submit" value="Supprimer" class="btn btn-danger">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
